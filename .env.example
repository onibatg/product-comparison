# Item Comparison API - Environment Variables Example
# Copy this file to .env and modify the values as needed

# Application Configuration
APP_APP_NAME="Item Comparison API"
APP_APP_VERSION="1.0.0"
APP_API_VERSION="v1"
APP_ENVIRONMENT="development"  # Options: development, staging, production

# Logging Configuration
APP_LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data Configuration
APP_DATA_FILE_PATH="data/products.json"

# Server Configuration
APP_HOST="0.0.0.0"
APP_PORT=8000
APP_RELOAD=true  # Set to false in production

# CORS Configuration
# Use comma-separated values for multiple origins
APP_CORS_ORIGINS="*"  # In production, specify exact origins like "https://example.com,https://app.example.com"
